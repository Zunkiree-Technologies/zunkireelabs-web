<header
  class="fixed top-0 left-0 right-0 z-50 bg-white/80 backdrop-blur-md border-b border-gray-200/50 transition-all duration-300"
  x-data="{ scrolled: false }"
  @scroll.window="scrolled = window.scrollY > 50"
  :class="{ 'shadow-sm': scrolled }"
>
  <div class="container-custom">
    <nav class="flex items-center justify-between h-16 lg:h-20">
      <!-- Logo -->
      <a href="/" class="flex items-center group">
        <img src="/assets/images/logo-dark.svg" alt="Zunkiree Labs" class="h-8 lg:h-9 w-auto" />
      </a>

      <!-- Desktop Navigation -->
      <div class="hidden lg:flex items-center gap-8">
        <!-- Nav Links -->
        <div class="flex items-center gap-6">
          <a href="/" class="nav-link">Home</a>
          <a href="/about/" class="nav-link">About</a>
          <a href="/services/" class="nav-link">Services</a>
          <a href="/projects/" class="nav-link">Projects</a>
          <a href="/contact/" class="nav-link">Contact</a>
        </div>

        <!-- CTA Button -->
        <a href="/contact/" class="btn-primary btn-sm">
          Get Started
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
          </svg>
        </a>
      </div>

      <!-- Mobile Menu Button -->
      <button
        class="lg:hidden p-2 text-gray-600 hover:text-gray-900 hover:bg-gray-100 rounded-lg transition-colors"
        @click="mobileMenuOpen = !mobileMenuOpen"
        aria-label="Toggle menu"
        :aria-expanded="mobileMenuOpen"
      >
        <svg x-show="!mobileMenuOpen" class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
        <svg x-show="mobileMenuOpen" x-cloak class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
        </svg>
      </button>
    </nav>
  </div>

  <!-- Mobile Menu -->
  <div
    class="lg:hidden fixed inset-x-0 top-16 bg-white border-b border-gray-200 shadow-lg transition-all duration-300 ease-out"
    x-show="mobileMenuOpen"
    x-transition:enter="transition ease-out duration-200"
    x-transition:enter-start="opacity-0 -translate-y-4"
    x-transition:enter-end="opacity-100 translate-y-0"
    x-transition:leave="transition ease-in duration-150"
    x-transition:leave-start="opacity-100 translate-y-0"
    x-transition:leave-end="opacity-0 -translate-y-4"
    @click.away="mobileMenuOpen = false"
    x-cloak
  >
    <div class="container-custom py-4">
      <div class="flex flex-col gap-1">
        <a href="/" class="px-4 py-3 text-gray-700 hover:text-zunkiree-600 hover:bg-gray-50 rounded-lg font-medium transition-all" @click="mobileMenuOpen = false">Home</a>
        <a href="/about/" class="px-4 py-3 text-gray-700 hover:text-zunkiree-600 hover:bg-gray-50 rounded-lg font-medium transition-all" @click="mobileMenuOpen = false">About</a>
        <a href="/services/" class="px-4 py-3 text-gray-700 hover:text-zunkiree-600 hover:bg-gray-50 rounded-lg font-medium transition-all" @click="mobileMenuOpen = false">Services</a>
        <a href="/projects/" class="px-4 py-3 text-gray-700 hover:text-zunkiree-600 hover:bg-gray-50 rounded-lg font-medium transition-all" @click="mobileMenuOpen = false">Projects</a>
        <a href="/contact/" class="px-4 py-3 text-gray-700 hover:text-zunkiree-600 hover:bg-gray-50 rounded-lg font-medium transition-all" @click="mobileMenuOpen = false">Contact</a>

        <!-- Mobile CTA -->
        <div class="mt-4 pt-4 border-t border-gray-200">
          <a href="/contact/" class="btn-primary w-full justify-center" @click="mobileMenuOpen = false">
            Get Started
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
            </svg>
          </a>
        </div>

        <!-- Mobile Social Links -->
        <div class="flex items-center justify-center gap-3 mt-4 pt-4 border-t border-gray-200">
          <a href="{{ site.social.github }}" class="w-10 h-10 rounded-lg bg-gray-100 hover:bg-gray-200 flex items-center justify-center text-gray-600 transition-colors" aria-label="GitHub">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M12 .297c-6.63 0-12 5.373-12 12 0 5.303 3.438 9.8 8.205 11.385.6.113.82-.258.82-.577 0-.285-.01-1.04-.015-2.04-3.338.724-4.042-1.61-4.042-1.61C4.422 18.07 3.633 17.7 3.633 17.7c-1.087-.744.084-.729.084-.729 1.205.084 1.838 1.236 1.838 1.236 1.07 1.835 2.809 1.305 3.495.998.108-.776.417-1.305.76-1.605-2.665-.3-5.466-1.332-5.466-5.93 0-1.31.465-2.38 1.235-3.22-.135-.303-.54-1.523.105-3.176 0 0 1.005-.322 3.3 1.23.96-.267 1.98-.399 3-.405 1.02.006 2.04.138 3 .405 2.28-1.552 3.285-1.23 3.285-1.23.645 1.653.24 2.873.12 3.176.765.84 1.23 1.91 1.23 3.22 0 4.61-2.805 5.625-5.475 5.92.42.36.81 1.096.81 2.22 0 1.606-.015 2.896-.015 3.286 0 .315.21.69.825.57C20.565 22.092 24 17.592 24 12.297c0-6.627-5.373-12-12-12"/></svg>
          </a>
          <a href="{{ site.social.twitter }}" class="w-10 h-10 rounded-lg bg-gray-100 hover:bg-gray-200 flex items-center justify-center text-gray-600 transition-colors" aria-label="Twitter">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/></svg>
