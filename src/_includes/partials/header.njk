<header
  class="fixed top-0 left-0 right-0 z-50 transition-all duration-300"
  x-data="{ scrolled: false }"
  @scroll.window="scrolled = window.scrollY > 50"
  :class="scrolled ? 'bg-white/95 backdrop-blur-xl border-b border-warm-border/50 shadow-sm' : 'bg-transparent'"
>
  <div class="max-w-[1200px] mx-auto px-5 md:px-10">
    <nav class="flex items-center justify-between h-[72px]">
      <!-- Logo -->
      <a href="/" class="flex items-center group">
        <img src="/assets/images/zunkireelabs-logo.svg" alt="Zunkiree Labs" class="h-[1.3rem] w-auto" />
      </a>

      <!-- Desktop Navigation - Centered like Duna -->
      <div class="hidden lg:flex items-center gap-8">
        <!-- Nav Links -->
        <div class="flex items-center gap-8">
          <a href="/about/" class="text-warm-charcoal hover:text-warm-black font-medium transition-colors">About</a>
          <a href="/services/" class="text-warm-charcoal hover:text-warm-black font-medium transition-colors">Services</a>
          <a href="/projects/" class="text-warm-charcoal hover:text-warm-black font-medium transition-colors">Projects</a>
          <a href="/contact/" class="text-warm-charcoal hover:text-warm-black font-medium transition-colors">Contact</a>
        </div>
      </div>

      <!-- CTA Button - Dark like Duna -->
      <div class="hidden lg:block">
        <a href="/contact/" class="inline-flex items-center px-5 py-2.5 bg-warm-rich-black text-white font-medium text-sm rounded-full hover:bg-warm-black transition-all duration-200">
          Schedule a demo
        </a>
      </div>

      <!-- Mobile Menu Button -->
      <button
        class="lg:hidden p-2 rounded-lg transition-colors text-warm-charcoal hover:text-warm-black hover:bg-warm-surface"
        @click="mobileMenuOpen = !mobileMenuOpen"
        aria-label="Toggle menu"
        :aria-expanded="mobileMenuOpen"
      >
        <svg x-show="!mobileMenuOpen" class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
        <svg x-show="mobileMenuOpen" x-cloak class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
        </svg>
      </button>
    </nav>
  </div>

  <!-- Mobile Menu -->
  <div
    class="lg:hidden fixed inset-x-0 top-[72px] bg-white border-b border-warm-border shadow-lg transition-all duration-300 ease-out"
    x-show="mobileMenuOpen"
    x-transition:enter="transition ease-out duration-200"
    x-transition:enter-start="opacity-0 -translate-y-4"
    x-transition:enter-end="opacity-100 translate-y-0"
    x-transition:leave="transition ease-in duration-150"
    x-transition:leave-start="opacity-100 translate-y-0"
    x-transition:leave-end="opacity-0 -translate-y-4"
    @click.away="mobileMenuOpen = false"
    x-cloak
  >
    <div class="max-w-[1200px] mx-auto px-5 py-4">
      <div class="flex flex-col gap-1">
        <a href="/" class="px-4 py-3 text-warm-charcoal hover:text-warm-black hover:bg-warm-off-white rounded-lg font-medium transition-all" @click="mobileMenuOpen = false">Home</a>
        <a href="/about/" class="px-4 py-3 text-warm-charcoal hover:text-warm-black hover:bg-warm-off-white rounded-lg font-medium transition-all" @click="mobileMenuOpen = false">About</a>
        <a href="/services/" class="px-4 py-3 text-warm-charcoal hover:text-warm-black hover:bg-warm-off-white rounded-lg font-medium transition-all" @click="mobileMenuOpen = false">Services</a>
        <a href="/projects/" class="px-4 py-3 text-warm-charcoal hover:text-warm-black hover:bg-warm-off-white rounded-lg font-medium transition-all" @click="mobileMenuOpen = false">Projects</a>
        <a href="/contact/" class="px-4 py-3 text-warm-charcoal hover:text-warm-black hover:bg-warm-off-white rounded-lg font-medium transition-all" @click="mobileMenuOpen = false">Contact</a>

        <!-- Mobile CTA -->
        <div class="mt-4 pt-4 border-t border-warm-border">
          <a href="/contact/" class="flex items-center justify-center w-full px-5 py-3 bg-warm-rich-black text-white font-medium rounded-xl hover:bg-warm-black transition-all" @click="mobileMenuOpen = false">
            Schedule a demo
          </a>
        </div>

        <!-- Mobile Social Links -->
        <div class="flex items-center justify-center gap-3 mt-4 pt-4 border-t border-warm-border">
          <a href="{{ site.social.github }}" class="w-10 h-10 rounded-lg bg-warm-surface hover:bg-warm-border flex items-center justify-center text-warm-600 transition-colors" aria-label="GitHub">
